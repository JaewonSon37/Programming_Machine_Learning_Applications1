   "metadata": {},
   "outputs": [],
   "source": [
    "import numpy as np"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "id": "f0abe8a1",
   "metadata": {},
   "outputs": [],
   "source": [
    "def rocchio(query_vector, relevant_docs, nonrelevant_docs, alpha, beta, gamma):\n",
    "\n",
    "    # Calculate the sum of relevant documents across all dimensions\n",
    "    relevant_sum = np.sum(relevant_docs, axis = 0)\n",
    "\n",
    "    # Calculate the sum of non-relevant documents across all dimensions\n",
    "    nonrelevant_sum = np.sum(nonrelevant_docs, axis = 0)\n",
    "    \n",
    "    # Calculate the modified query vector using Rocchio algorithm\n",
    "    modified_query = alpha * query_vector + beta * (relevant_sum / len(relevant_docs)) - gamma * (nonrelevant_sum / len(nonrelevant_docs))\n",
    "    \n",
    "    return modified_query"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "id": "165719d5",
   "metadata": {},
   "outputs": [],
   "source": [
    " # Define the initial query vector\n",
    "query_vector = np.array([0.2, 0.3, 0.5])\n",
    "\n",
    "# Define the matrix of relevant documents\n",
    "relevant_docs = np.array([[0.1, 0.2, 0.6],\n",
    "                          [0.3, 0.1, 0.4],\n",
    "                          [0.2, 0.3, 0.4]])\n",
    "\n",
    "# Define the matrix of non-relevant documents\n",
    "nonrelevant_docs = np.array([[0.7, 0.2, 0.1],\n",
    "                             [0.8, 0.1, 0.1]])"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 4,
   "id": "12541906-0dbb-4164-9894-bd7fd4ddd2ff",
